.switch
  width 100px
  height 50px
  margin-left 100px
  margin-top 100px
  line-height 50px
  border 1px solid #000
  cursor pointer
  .left
    width 49%
    float: left;
    border-right 1px solid #ccc
    height 100%
  .right
    width 49%
    float: left;
    height 100%
  .status
    font-size 40px
    font-weight bold
    float: left;
